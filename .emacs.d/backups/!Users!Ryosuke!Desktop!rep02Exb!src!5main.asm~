;*******************************************************************
;* This stationery serves as the framework for a user application. *
;* For a more comprehensive program that demonstrates the more     *
;* advanced functionality of this processor, please see the        *
;* demonstration applications, located in the examples             *
;* subdirectory of the "Freescale CodeWarrior for HC08" program    *
;* directory.                                                      *
;*******************************************************************

; Include derivative-specific definitions
            INCLUDE 'derivative.inc'

; export symbols
            XDEF _Startup, main
            ; we export both '_Startup' and 'main' as symbols. Either can
            ; be referenced in the linker .prm file or from C/C++ later on

            XREF __SEG_END_SSTACK   ; symbol defined by the linker for the end of the stack


; variable/data section
MY_ZEROPAGE: SECTION  SHORT         ; Insert here your data definition

MODE:            DS 1
COUNT:          DS 1
INDEX:            DS 1
HXREGI:          DS 1

HIST:              DS 10

ZERO:             DS 1
ONE:              DS 1
TWO:              DS 1
THREE:            DS 1
FOUR:             DS 1
FIVE:               DS 1
SIX:                DS 1
SEVEN:            DS 1


; code section
MyCode:     SECTION
main:
_Startup:
            LDHX   #__SEG_END_SSTACK ; initialize the stack pointer
            TXS
            CLI                     ; enable interrupts

            LDA #00000000b       ;PTAを入力に
            STA PTADD        
            LDA #11111111b      ;PTBを出力に
            STA PTBDD

            LDA #0
            STA COUNT
            STA INDEX
            STA MODE
            
            LDHX #0h
            
            LDA #01000000b         ;LEDパターン記録
            STA ZERO
            LDA #11111001b
            STA ONE
            LDA #00100100b
            STA TWO
            LDA #00110000b
            STA THREE
            LDA #00011001b
            STA FOUR
            LDA #00010010b
            STA FIVE
            LDA #00000010b
            STA SIX
            LDA #01111000b
            STA SEVEN   

            LDA #11111111b        ;LED消灯
            STA PTBD

waitC:                                  ;コンデンサの充電を待つ
            LDA PTAD
            AND #00000001b
            BEQ waitC
                   
            BRA waitSw1On
            
ON_TIMER:
            STX HXREGI
            LDA #01010111b   ; タイマの再設定
            STA SRTISC

            
           LDA COUNT
           INCA
           STA COUNT              ; COUNT++
           
           CMP #00000001b
           BEQ One
           CMP #00000010b
           BEQ Two
           CMP #00000011b
           BEQ Three
           CMP #00000100b
           BEQ Four
           BRA TimerEnd
           
One:
           LDA ONE       ;[1]を出力
           STA PTBD
           BRA TimerEnd
Two:
           LDA ZERO       ;[0]を出力
           STA PTBD
           BRA TimerEnd
Three:
           LDA FOUR        ;[4]を出力
           STA PTBD
           BRA TimerEnd
Four:
           LDA FOUR        ;[4]を出力
           STA PTBD
           BRA TimerEnd   

TimerEnd:
           LDA COUNT
           CMP #00000101b
           BEQ TimerOff
           BRA TimerOn
TimerOff:
           LDA #01000000b   ; タイマoff
           STA SRTISC
           LDA #11111111b        ;LED消灯
           STA PTBD
           BRA BackMainLoop     
TimerOn:
           LDA #01010111b   ; タイマの再設定
           STA SRTISC
BackMainLoop:                       
            LDX HXREGI
            RTI

waitSw1On:
            feed_watchdog     
            LDA #00000000b
            STA COUNT                   
            LDA PTAD
            AND #00000001b
            BEQ waitSw1Off
            BRA waitSw1On

waitSw1Off:
            feed_watchdog
            LDA PTAD
            AND #00000001b
            BEQ waitSw1Off
            BRA Sw1Off
            
Sw1Off:
            LDA #00010111b           ;タイマの設定
            STA SRTISC
            
mainLoop:            
            feed_watchdog
            LDA COUNT
            CMP #00000101b
            BEQ waitSw1On
            BRA    mainLoop


            ORG Vrti
            DC.W ON_TIMER
            
            